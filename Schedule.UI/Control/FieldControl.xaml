<UserControl x:Class="Schedule.UI.Control.FieldControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Schedule.UI.Control"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel Orientation="Horizontal" Focusable="False">
            <TextBlock Text="{Binding FieldName}" Padding="2 2 5 2" MinWidth="40" Background="AliceBlue" Margin="0 0 5 5" />
            <TextBlock Text="{Binding FieldValue}" Padding="2 2 5 2" />
        </StackPanel>
    </Grid>
</UserControl>
